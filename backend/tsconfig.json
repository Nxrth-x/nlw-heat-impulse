{
    "compilerOptions": {
        "outDir": "dist",
        "target": "es2018",
        "module": "commonjs",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strictNullChecks": false,
        "strict": true,
        "skipLibCheck": true,
        "baseUrl": "./src",
        "paths": {
            "@lib/*": ["lib/*"],
            "@middlewares/*": ["middlewares/*"],
            "@helpers/*": ["helpers/*"],
            "@modules/*": ["modules/*"]
        }
    }
}
